<div class="container mt-6 pb-5">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
      <div class="card bg-secondary shadow border-0">
        <div class="card-header bg-transparent pb-3">
          <div class="text-muted text-center mt-2"><h1>Short.er</h1></div>
        </div>
        <div class="card-body px-lg-5 py-lg-5">
          <div class="text-center text-muted mb-4">
            <small>Informe as suas credenciais para criar uma nova conta</small>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <div class="input-group input-group-alternative">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'E-mail' %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group input-group-alternative">
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Senha' %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group input-group-alternative">
                <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'form-control', placeholder: 'Confirmar Senha' %>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "Registrar", class: 'btn btn-success my-4' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-6">
          <%= link_to new_session_path(resource_name), class: 'text-light' do %>
            <small>JÃ¡ possui uma conta? Entre aqui</small>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

