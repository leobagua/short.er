<%= form_with model: url, url: path, remote: true do |form| %>
  <div class="form-group mb-3">
    <div class="input-group input-group-alternative">
      <%= form.text_field :description, class: 'form-control form-control-alternative', placeholder: 'Description' %>
    </div>
  </div>
  <div class="form-group mb-3">
    <div class="input-group input-group-alternative">
      <%= form.text_area :long, class: 'form-control form-control-alternative', placeholder: 'Long URL', cols: 5, rows: 5 %>
    </div>
  </div>
  <div class="text-center">
    <%= form.submit "Salvar", class: 'btn btn-success' %>
  </div>
<% end %>